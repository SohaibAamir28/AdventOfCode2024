<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F5F5F5">

    <TextView
        android:id="@+id/energyConsumptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy Consumption"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/lastHourTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Hour"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/lastHourValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5 kWh"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/lastDayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Day"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/lastDayValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 kWh"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/lastMonthTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Month"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/lastMonthValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42 kWh"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
